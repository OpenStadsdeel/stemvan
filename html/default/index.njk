{% extends 'base.njk' %}
{% import 'includes/secondary.njk' as sec %}

{% set contentClass = 'index' %}

{% block content %}
	<div id="banner">
		<div class="image" style="background-image: url('/img/home_banner.jpg');"></div>
		<div class="text">
			<h2>Welkom op {{SITENAME}}</h2>
			Dit is jouw online meeting point voor het indienen van voorstellen voor je buurt.
			Een nieuw plantsoen? Extra parkeerplekken of juist veel minder? Jij bedenkt het!
			Voer campagne voor je plan, verzamel zoveel mogelijk stemmen en pitch jouw voorstel
			bij het Algemeen Bestuur!
		</div>
	</div>
	
	<div class="primary">
		{{sec.newIdeaBubble()}}
		
		{# Syntax formatting because `div.tile` is `display: inline-block`. #}
		{% for article in articles
		%}<div class="tile">
			<a href="/artikel/{{article.id}}">
			<div class="image" style="background-image: url('/img/articles/{{article.id}}/thumbnail.jpg');"></div>
			<h3>{{article.title}}</h3>
			{{article.summary}}
			</a>
			
			<a href="/artikel/{{article.id}}" class="readMore">Lees meer</a>
		</div>{%
		endfor %}
	</div>
	
	<div class="secondary">
		{{sec.newIdeaBubble()}}
		
		{{sec.highlightedIdeas(highlightedIdeas)}}
		
		{{sec.agenda(upcomingMeetings)}}
	</div>
{% endblock %}